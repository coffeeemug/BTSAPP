<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_secondary"
    tools:context=".request_form">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginStart="374dp"
        android:layout_marginLeft="374dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="692dp"
        android:background="@color/design_default_color_on_secondary"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

    <LinearLayout
        android:id="@+id/request_form"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:background="@color/design_default_color_background"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Customer Name" />

        <EditText
            android:id="@+id/cusPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Phone (123-456-7890)" />

        <EditText
            android:id="@+id/cusService"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Requested Service" />

        <EditText
            android:id="@+id/reqDate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="Date dd/mm/yyyy"
            android:inputType="date" />

        <EditText
            android:id="@+id/carMake"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Car Make" />

        <EditText
            android:id="@+id/carModel"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Car Model" />

        <EditText
            android:id="@+id/carColor"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Car Color" />

        <EditText
            android:id="@+id/carDesc"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:height="50dp"
            android:hint="Description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sendreqBttn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/design_default_color_on_secondary"
                android:text="Send Request "
                android:textColor="@color/design_default_color_background"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/design_default_color_background" />

            <Button
                android:id="@+id/cancelBttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/design_default_color_on_secondary"
                android:text="Cancel"
                android:textColor="@color/design_default_color_background"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/user_name2"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Chike Browne"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_address2"
        android:layout_width="220dp"
        android:layout_height="35dp"
        android:layout_marginStart="134dp"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:layout_marginBottom="692dp"
        android:gravity="center"
        android:text="Seneca College"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reqtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="51dp"
        android:gravity="center_horizontal"
        android:text="Service request form"
        android:textAllCaps="true"
        android:textColor="@color/design_default_color_background"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/top_divider2"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_marginTop="39dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="411dp"
        android:layout_height="61dp"
        android:layout_marginTop="671dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/homebttn"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/searchbttn"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/search" />

        <ImageView
            android:id="@+id/profbttn"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/profile" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>





