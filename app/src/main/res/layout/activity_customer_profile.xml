<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_secondary"
    tools:context=".customer_profile">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:numColumns="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profpc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/prfpic"/>

        <TextView
            android:id="@+id/profile_username"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Chike Browne"
            android:textColor="@color/design_default_color_background"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profile_address"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Seneca College"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/notificationsPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:background="@drawable/common_full_open_on_phone"
            android:clickable="true" />

        <ImageView
            android:id="@+id/notificationDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:background="@android:drawable/ic_notification_overlay" />

    </GridLayout>


    <ListView
        android:id="@+id/car_list"
        android:layout_width="wrap_content"
        android:layout_height="600dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="176dp"
        android:background="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="411dp"
        android:layout_height="61dp"
        android:layout_marginTop="671dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:gravity="center"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/homebttn"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/searchbttn"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/search" />

        <ImageView
            android:id="@+id/profbttn"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/profile" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>