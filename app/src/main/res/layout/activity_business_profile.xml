<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_secondary"
    tools:context=".BusinessProfile">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="450dp"
        android:layout_height="61dp"
        android:layout_marginTop="671dp"
        android:background="@color/common_google_signin_btn_text_dark_focused"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/homebttn"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/home"
            android:focusable="true" />

        <ImageView
            android:id="@+id/searchbttn"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/search"
            android:focusable="true" />

        <ImageView
            android:id="@+id/profbttn"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/profile"
            android:focusable="true"
            android:contentDescription="TODO" />
    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/profpc"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/profpic"
        app:layout_constraintEnd_toStartOf="@+id/profile_address"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ListView
        android:id="@+id/service_list"
        android:layout_width="wrap_content"
        android:layout_height="490dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="176dp"
        android:background="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_username"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="94dp"
        android:gravity="center"
        android:text="Business Name"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_address"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Business Address"
        android:textColor="@color/design_default_color_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>